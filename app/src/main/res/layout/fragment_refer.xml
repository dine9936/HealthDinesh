<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@android:color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReferFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ScrollView
    android:layout_above="@+id/call_assistant"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_marginBottom="4dp"
            app:cardElevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/refer_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
                <TextView
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invite your friends by sharing your referral code to download this app &amp; you will get 10% Referral Cashback upto Rs. 2000/-"
                    android:gravity="center_horizontal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How it works?"/>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:padding="5dp"
                android:layout_width="60dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorPrimary"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/invite"
                android:tint="@android:color/black" />
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/tab_indicator_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invite your Friends to download app with your referrel code."
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/tab_indicator_text"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:padding="5dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorPrimary"
                android:layout_height="60dp"
                android:src="@drawable/register"/>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 2"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/tab_indicator_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tell them to register with your referrel code."
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/tab_indicator_text"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:padding="5dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorPrimary"
                android:tint="@android:color/black"
                android:layout_height="60dp"
                android:src="@drawable/top"/>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 3"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/tab_indicator_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="If they do Minimum recharge of Rs. 500.00, You will get 10%  Referral Cashback  of the first recharge amount.
Also assure that your code should work as per this refferal offer.
"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/tab_indicator_text"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Referral code"
            android:textColor="@android:color/tab_indicator_text"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_gravity="bottom"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@android:color/tab_indicator_text"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/bg_refer_code_button"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Ram88454156"/>
            <Button
                android:id="@+id/refer_button"
                android:paddingLeft="15dp"
                android:textSize="16sp"
                android:drawablePadding="10dp"
                android:drawableTint="@android:color/white"
                android:textColor="@android:color/white"
                android:background="@drawable/button_backgroud"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Invite"
                android:drawableLeft="@drawable/ic_refer"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

    <Button
        style="@style/RobotoBold"
        android:id="@+id/call_assistant"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="call for assistance"
        android:background="@color/colorAccent"
        />
</RelativeLayout>