<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardElevation="0dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wallet_date"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22:00 23/08/2020"
            android:textSize="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:id="@+id/tv_transaction_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wallet Topup"
                        style="@style/RobotoBold"/>
                    <TextView
                        android:textColor="#27AE60"

                        android:gravity="right"
                        android:layout_weight="2"
                        android:textSize="12sp"
                        android:id="@+id/tv_transaction_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wallet Topup"
                        style="@style/RobotoBold"/>



                </LinearLayout>


                <TextView
                    android:textSize="10dp"
                    android:id="@+id/tv_transaction_detail"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction id: xxxxxxxxxx"/>




            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/RobotoBold"
                    android:textSize="14sp"
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹ 500"
                    android:textColor="#27AE60"
                    android:drawableTint="#27AE60"
                    android:drawablePadding="8dp"
                    android:layout_gravity="center" />



            </LinearLayout>



        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>