<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<TextView
    android:padding="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Low Balance"
    android:textSize="20sp"
    android:textColor="@android:color/black"/>
    <TextView
        android:textColor="@android:color/black"
        android:padding="5dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your wallet has low balance,Kindly recharge your wallet."/>
    <TextView
        android:padding="10dp"
        android:text="Available balance: ₹200\nOrder Value: ₹300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wallet_balance"/>
    <LinearLayout
        android:padding="10dp"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/addamunt"
            android:background="@drawable/bg_add_amount_button"
            android:textColor="@android:color/white"
            android:text="ADD amount"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <Button
            android:id="@+id/cancel"
            android:background="@drawable/bg_cancel_button"
            android:textColor="@color/colorAccent"
            android:text="Cancel"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>