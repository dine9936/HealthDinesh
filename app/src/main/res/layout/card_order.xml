<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="118dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/time_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="09:20 01/03/2020"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:padding="2dp"
                android:id="@+id/order_id"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Order id#123456"
                android:textColor="#565656"
                android:textSize="10sp" />

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/item_image_order_card"
                android:background="@drawable/rounded_dialog"
                android:layout_gravity="bottom"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:padding="5dp"
                android:src="@drawable/hmimage" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:layout_below="@+id/time_date"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:padding="2dp"
                android:id="@+id/item_name"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sweet Lime - 200ml"
                android:textColor="@android:color/black" />

            <TextView
                android:padding="2dp"
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Price Paid - Rs 70."
                android:textSize="10sp" />

            <TextView
                android:padding="2dp"
                android:id="@+id/order_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivering to - Alambagh, Lucknow"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_placed"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>
                <TextView
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="Order Placed"/>
                <TextView
                    android:padding="2dp"
                    android:id="@+id/date_delivery"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text=" for 09/12/2020"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
